<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@drawable/black_white"
>
<TextView
android:id="@+id/profile_name"
android:singleLine="true"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="center_horizontal"
android:textSize="22sp"
android:textColor="@color/red"
android:paddingBottom="30dip"
/>
<LinearLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_gravity="center_horizontal"
>
<Button
android:id="@+id/follow_user"
android:text="Follow"
android:textSize="15sp"
android:textColor="@color/ghost_white"
android:background="@drawable/custom_button"
android:layout_width="120dip"
android:layout_height="50dip"
android:padding="5dip"
android:gravity="center"
/>
<Button
android:id="@+id/sms_user"
android:text="SMS"
android:textSize="15sp"
android:textColor="@color/ghost_white"
android:background="@drawable/custom_button"
android:layout_width="120dip"
android:layout_height="50dip"
android:padding="5dip"
android:gravity="center"
/>
</LinearLayout>
<LinearLayout
android:layout_margin="20dip"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="horizontal"
>
<ImageView
android:src="@drawable/cyg_demo"
android:id="@+id/profile_image"
android:layout_width="80dip"
android:layout_height="80dip"
android:scaleType="centerCrop"
android:padding="10dip"
/>
<LinearLayout
android:orientation="vertical"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
>
<LinearLayout
android:orientation="horizontal"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginLeft="10dip"
android:gravity="center_horizontal"
>
<TextView
android:text="Birthday: "
android:textSize="16sp"
android:layout_gravity="center_horizontal"
android:textColor="@color/red"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
/>
<TextView
android:id="@+id/birthday"
android:textSize="16sp"
android:textColor="@color/blue"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingLeft="10dip"
/>
</LinearLayout>
<LinearLayout
android:orientation="horizontal"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginLeft="10dip"
>
<TextView
android:text="College: "
android:textSize="16sp"
android:textColor="@color/red"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
/>
<TextView
android:id="@+id/college"
android:textSize="16sp"
android:textColor="@color/blue"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingLeft="20dip"
/>
</LinearLayout>
<LinearLayout
android:orientation="horizontal"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginLeft="10dip"
>
<TextView
android:text="Phone no: "
android:textSize="16sp"
android:textColor="@color/red"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
/>
<TextView
android:id="@+id/phone_no"
android:textSize="16sp"
android:textColor="@color/blue"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingLeft="10dip"
/>
</LinearLayout>
</LinearLayout>
</LinearLayout>
<TextView
android:text="Bio"
android:textSize="18sp"
android:textColor="@color/blue"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingTop="10dip"
android:layout_gravity="center_horizontal"
android:textStyle="bold"
/>
<TextView
android:id="@+id/bio"
android:textSize="14sp"
android:textColor="@color/green"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingTop="5dip"
android:gravity="center_horizontal|center_vertical"
/>
<LinearLayout
android:orientation="horizontal"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:gravity="center"
android:layout_gravity="center_horizontal"
android:layout_marginTop="40dip"
>
<LinearLayout
android:orientation="vertical"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
>
<TextView
android:text="Launches"
android:textSize="15sp"
android:textColor="@color/green"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="5dip"
/>
<Button
android:id="@+id/posts_count"
android:textSize="15sp"
android:textColor="@color/blue"
android:layout_width="60dip"
android:layout_height="50dip"
android:padding="5dip"
android:gravity="center"
/>
</LinearLayout>
<LinearLayout
android:orientation="vertical"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
>
<TextView
android:text="Satelites"
android:textSize="15sp"
android:textColor="@color/green"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="5dip"
/>
<Button
android:id="@+id/followers_count"
android:textSize="15sp"
android:textColor="@color/blue"
android:layout_width="60dip"
android:layout_height="50dip"
android:padding="5dip"
android:gravity="center"
/>
</LinearLayout>
<LinearLayout
android:orientation="vertical"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
>
<TextView
android:text="Asteroids"
android:textSize="15sp"
android:textColor="@color/green"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:padding="5dip"
/>
<Button
android:id="@+id/followees_count"
android:textSize="15sp"
android:textColor="@color/blue"
android:layout_width="60dip"
android:layout_height="50dip"
android:padding="5dip"
android:gravity="center"
/>
</LinearLayout>
</LinearLayout>
</LinearLayout>