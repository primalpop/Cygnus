<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
<LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="@drawable/gradient1"
  >
 <TextView
 	android:layout_width="wrap_content"
 	android:layout_height="wrap_content"
 	android:textSize="18sp"
 	android:textStyle="bold"
 	android:text="Enter the following information"
 	android:layout_gravity="center_horizontal"
 
 /> 
 
   <LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:orientation="horizontal"
	android:layout_marginBottom="2dip"
	>	
<TextView 
     android:text = "User Name"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="15sp"
	 android:textStyle="bold"
     />     
     
<EditText 
			  android:id="@+id/screen_name"
			  android:layout_width="220dip"
              android:layout_height="wrap_content"
              android:hint="Enter your screen name"  
              android:singleLine="true"             
              android:layout_marginLeft="0dip"             
  /> 
   </LinearLayout>
     <LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:orientation="horizontal"
	android:layout_marginBottom="2dip"
	>	
<TextView 
     android:text = "Full Name"  
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="15sp"
	 android:textStyle="bold"
     />     
     
<EditText 
			  android:id="@+id/full_name"
              android:layout_height="wrap_content"
              android:layout_width="220dip"
              android:hint="Enter your full name"
              android:singleLine="true"
              android:layout_marginLeft="10dip"
  />
   </LinearLayout>
   <LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:orientation="horizontal"
	android:layout_marginBottom="2dip"
	>	
<TextView 
     android:text = "Password"  
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="15sp"
	 android:textStyle="bold"
	 
     />     
     
<EditText 
			  android:id="@+id/password_first"
              android:layout_height="wrap_content"
         	  android:layout_width="220dip"
              android:hint="Alphanumericals"
              android:singleLine="true"
              android:password="true"
              android:layout_marginLeft="12dip"              
  /> 
 </LinearLayout>
   <LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:orientation="horizontal"
	android:layout_marginBottom="2dip"
	>	
<TextView 
     android:text = "Phone no"  
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="15sp"
	 android:textStyle="bold"
	 
     />     
     
<EditText 
			  android:id="@+id/phone_number"
              android:layout_height="wrap_content"
              android:layout_width="220dip"
              android:hint="10 digit Phone Number"
              android:singleLine="true"
              android:layout_marginLeft="12dip"
              android:inputType="numberDecimal"
              
  /> 
 </LinearLayout>
   <LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:orientation="horizontal"
	android:layout_marginBottom="2dip"
	>	
<TextView 
     android:text = "Birthday"  
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="15sp"
	 android:textStyle="bold"
	
     />     
     
<EditText 
			  android:id="@+id/birth_day"
              android:layout_height="wrap_content"
         	  android:layout_width="220dip"
              android:hint="Date of Birth"
              android:singleLine="true"
              android:layout_marginLeft="12dip"              
               android:inputType="date"
	 
  /> 
 </LinearLayout>
   <LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:orientation="horizontal"
	android:layout_marginBottom="2dip"
	>	
<TextView 
     android:text = "Mail id"  
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="15sp"
	 android:textStyle="bold"
    
     />     
     
<EditText 
			  android:id="@+id/mail_id"
              android:layout_width="220dip"
              android:layout_height="wrap_content"
              android:hint="Your active mail id"
              android:singleLine="true"
              android:layout_marginLeft="24dip"
              android:inputType="textEmailAddress"
              
  /> 
 </LinearLayout>
    <LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:orientation="horizontal"
	android:layout_marginBottom="2dip"
	>	
<TextView 
     android:text = "Location"  
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="15sp"
	 android:textStyle="bold"
     />     
     
<EditText 
			  android:id="@+id/location"
              android:layout_width="220dip"
              android:layout_height="wrap_content"
              android:hint="Wer do you Live?"
              android:singleLine="true"
              android:layout_marginLeft="15dip"
              
  /> 
 </LinearLayout>
    <LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:orientation="horizontal"
	android:layout_marginBottom="2dip"
	>	
<TextView 
     android:text = "College"  
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="15sp"
	 android:textStyle="bold"
     />     
     
<EditText 
			  android:id="@+id/college_entry"
              android:layout_width="220dip"
              android:layout_height="wrap_content"
              android:hint="Your College"
              android:singleLine="true"
              android:layout_marginLeft="24dip"
              
  /> 
 </LinearLayout>
    <LinearLayout
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal"
	android:orientation="horizontal"
	android:layout_marginBottom="2dip"
	>	
<TextView 
     android:text = "Bio"  
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="15sp"
	 android:textStyle="bold"
     />     
     
<EditText 
			  android:id="@+id/bio_entry"
              android:layout_width="220dip"
              android:layout_height="wrap_content"
              android:hint="About you"
              android:singleLine="false"
              android:layout_marginLeft="50dip"
              
  /> 
  </LinearLayout>
<Button 
	 android:id="@+id/terms_cond"
     android:text = "Terms and conditions"  
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="15dip"
	 android:textStyle="bold"
	 android:layout_gravity="center_horizontal"
	 android:layout_marginBottom="5dip"
     />
<Button 
	 android:id="@+id/sign_in_complete"
     android:text = "Agree and Sign in"  
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="18dip"
	 android:textStyle="bold"
	 android:layout_gravity="center_horizontal"
     />          
     
</LinearLayout>
</ScrollView>